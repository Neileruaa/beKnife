{% extends 'base.html.twig' %}

{% block title %}New Couteau{% endblock %}

{% block body %}
    <h1>Générer facture</h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.sexe) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}
            {{ form_row(form.adresse) }}
            {{ form_row(form.cp) }}
            {{ form_row(form.ville) }}
            {{ form_row(form.mail) }}
            {{ form_row(form.number) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.nomcb) }}
            {{ form_row(form.numcarte) }}
            {{ form_row(form.picto) }}
            {{ form_row(form.dateExp) }}
        </div>
    </div>
    <button class="btn">{{ button_label|default('Sauvegarder') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('app_couteau_index') }}">Retour à la liste</a>

{% endblock %}
